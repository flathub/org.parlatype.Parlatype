{
    "app-id": "org.parlatype.Parlatype",

    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.openjdk11"
    ],

    "command": "parlatype",

    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home:ro",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.gnome.SettingsDaemon.MediaKeys",
        "--own-name=org.mpris.MediaPlayer2.parlatype"
    ],
    "cleanup": [
        "*.la",
        "*.a",
        "/bin/bazel",
        "/include",
        "/jre",
        "/lib/debug",
        "/lib/pkgconfig",
        "/lib/python3.8",
        "/libexec",
        "/share/man"
    ],
    "modules": [
        {
            "name" : "openjdk",
            "buildsystem" : "simple",
            "build-commands" : [
                "/usr/lib/sdk/openjdk11/install.sh"
            ]
        },
        {
            "name" : "bazel",
            "buildsystem" : "simple",
            "build-commands" : [
                "unzip bazel.zip -d bazel-build",
                "cd bazel-build; ./compile.sh",
                "install -m 0755 -D bazel-build/output/bazel /app/bin/bazel"
            ],
            "build-options" : {
                "strip" : false,
                "no-debuginfo" : true,
                "no-debuginfo-compression" : true,
                "env" : {
                    "EXTRA_BAZEL_ARGS" : "--host_javabase=@local_jdk//:jdk",
                    "JAVA_HOME" : "/usr/lib/sdk/openjdk11/jvm/openjdk-11"
                }
            },
            "sources" : [
                {
                    "type" : "file",
                    "url" : "https://github.com/bazelbuild/bazel/releases/download/3.1.0/bazel-3.1.0-dist.zip",
                    "dest-filename" : "bazel.zip",
                    "sha256" : "d7f40d0cac95a06cea6cb5b7f7769085257caebc3ee84269dd9298da760d5615"
                }
            ]
        },
        {
            "name" : "lapack",
            "buildsystem" : "cmake",
            "builddir" : true,
            "config-opts" : [
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DCMAKE_INSTALL_LIBDIR=lib",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_SHARED_LIBS=ON",
                "-DBUILD_TESTING=OFF",
                "-DLAPACKE=ON",
                "-DCBLAS=ON"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "http://www.netlib.org/lapack/lapack-3.8.0.tar.gz",
